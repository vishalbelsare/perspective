        "base64-font-loader": "0.0.4",
        "chalk": "^2.4.2",
        "core-js": "^3.6.4",
        "cpx": "^1.5.0",
        "css-loader": "^0.28.7",
        "cssnano": "^4.1.10",
        "cssnano-preset-lite": "^1.0.1",
        "dotenv": "^8.1.0",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^3.0.1",
        "eslint-plugin-markdown": "^1.0.2",
        "eslint-plugin-prettier": "^2.6.2",
        "file-loader": "^6.2.0",
        "fs-extra": "^8.1.0",
        "html-loader": "^0.5.1",
        "html-loader-jest": "^0.2.1",
        "html-webpack-plugin": "^4.5.1",
        "inquirer": "^7.0.0",
        "jest": "^25.1.0",
        "jest-junit": "^10.0.0",
        "jsdoc": "3.5.5",
        "jsdoc-babel": "^0.5.0",
        "jsdoc-to-markdown": "^4.0.1",
        "lerna": "^3.22.1",
