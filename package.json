        "npm-run-all": "^4.1.3",
        "postcss": "^8.2.6",
        "postcss-copy-assets": "^0.3.1",
        "postcss-easy-import": "^3.0.0",
        "postcss-font-grabber": "^3.0.2",
        "postcss-loader": "^4.1.0",
        "postcss-url": "^10.1.3",
        "pre-commit": "^1.2.2",
        "prettier": "^1.19.1",
        "rimraf": "^2.6.2",
        "rollup": "^2.38.5",
        "rollup-plugin-filesize": "^9.1.0",
        "rollup-plugin-postcss": "^4.0.0",
